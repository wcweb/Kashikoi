<h2>{{post.title}}{{post.id}}</h2>
{{#link-to 'play-video' class="imgs"}}<img src="/assets/v2.jpg"  />{{/link-to}}
<p>{{post.body}}</p>



<section class="comments">
	
	<ul >
	{{#each comment in post.comments}}
	  <li>
	    <div>{{comment.body}}</div>
	  </li>
	{{/each}}
	</ul>
</section>

</div>
{{/each}}
